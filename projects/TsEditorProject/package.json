{
    "name": "tsproject",
    "version": "1.0.0",
    "description": "ts project assets",
    "scripts": {
        "editor:compile:dev": "webpack --config webpack.config.dev.js --watch",
        "editor:compile": "webpack --config webpack.config.js",
        "editor:rm": "node ./xor-workflow.mjs rmdir --target=../Assets/XOR/Editor/Resources/puerts/xor-editor",
        "editor:copy": "node ./xor-workflow.mjs copydir --filter=.js/.mjs/.cjs --extname=.cjs --source=./output/webpack-editor --target=../Assets/XOR/Editor/Resources/puerts/xor-editor",
        "editor:copy-license": "node ./xor-workflow.mjs copydir --filter=.txt --source=./output/webpack-editor --target=../Assets/XOR/Editor/Resources/puerts/xor-editor",
        "editor:publish": 
            "npm run editor:compile && npm run editor:rm && npm run editor:copy && npm run editor:copy-license",
        
        "runtime:compile": "tsc -p tsconfig.json",
        "runtime:compile-esm": "tsc -p tsconfig.json --module ES6",
        "runtime:rm-js": "node ./xor-workflow.mjs rmdir --target=../Assets/XOR/Runtime/Resources/puerts/xor",
        "runtime:copy-cjs": "node ./xor-workflow.mjs copydir --filter=.js/.mjs/.cjs --extname=.cjs --source=./output/xor --target=../Assets/XOR/Runtime/Resources/puerts/xor",
        "runtime:copy-mjs": "node ./xor-workflow.mjs copydir --filter=.js/.mjs/.cjs --extname=.mjs --source=./output/xor --target=../Assets/XOR/Runtime/Resources/puerts/xor",
        "runtime:copy-dts": "node ./xor-workflow.mjs copydir --filter=.ts --source=./output/xor --target=../Assets/XOR/Typing/puerts/xor",
        "runtime:publish": 
            "npm run runtime:compile && npm run runtime:rm-js && npm run runtime:copy-cjs && npm run runtime:copy-dts",
        "runtime:publish-esm": 
            "npm run runtime:compile-esm && npm run runtime:rm-js && npm run runtime:copy-mjs && npm run runtime:copy-dts && npm run runtime:compile"
    },
    "dependencies": {},
    "devDependencies": {
        "@types/node": "^18.7.23",
        "buffer": "^6.0.3",
        "eslint": "^7.32.0",
        "minimist": "^1.2.7",
        "source-map-support": "^0.5.19",
        "ts-loader": "^9.4.2",
        "ts-morph": "^17.0.1",
        "typescript": "^4.6.3",
        "webpack": "^5.75.0",
        "webpack-cli": "^5.0.1"
    }
}